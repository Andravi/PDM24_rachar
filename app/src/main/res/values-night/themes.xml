<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme for Night Mode. -->
    <style name="Theme.ConstraintLayout" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/gold_dark</item>
        <item name="colorPrimaryVariant">@color/gold_light</item>
        <item name="colorOnPrimary">@color/soft_yellow</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/bronze_dark</item>
        <item name="colorSecondaryVariant">@color/bronze_light</item>
        <item name="colorOnSecondary">@color/dark_brown</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Appbar Text theme -->
        <item name="android:textColorPrimary">@color/light_blue</item>
    </style>
</resources>
